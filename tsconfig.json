{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "types": ["vite/client", "vitest/globals"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "**/*.stories.js",
    "**/*.stories.ts",
    "stories/**/*.js",
    "stories/**/*.ts",
    ".storybook/**/*.js",
    ".storybook/**/*.ts"
  ],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/domain/__test__/Cart.test.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
