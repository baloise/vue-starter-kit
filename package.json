{
  "name": "vue-starter-kit",
  "version": "0.0.0",
  "description": "Boilerplate project to start a Vue Baloise Application",
  "license": "Apache-2.0",
  "author": {
    "name": "Gery Hirschfeld",
    "email": "gerhard.hirschfeld@baloise.ch",
    "url": "https://github.com/hirsch88"
  },
  "scripts": {
    "dev": "vite",
    "test": "start-server-and-test dev http-get://localhost:3000 cypress:run",
    "test:ci": "start-server-and-test dev http-get://localhost:3000 cypress:run:ci",
    "build": "npm run lint && vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "lint": "eslint src --ext .ts,vue",
    "format": "npm run prettier:write",
    "prettier:write": "prettier --write \"./src\"",
    "prettier:check": "prettier --check \"./src\"",
    "cypress:run": "cypress run --config video=false,screenshotOnRunFailure=false",
    "cypress:run:ci": "cypress run --config",
    "cypress:open": "cypress open"
  },
  "dependencies": {
    "@baloise/ui-library": "^4.8.0",
    "@baloise/ui-library-vue": "^4.8.0",
    "@baloise/vue-axios": "0.0.7",
    "axios": "^0.21.1",
    "vee-validate": "^4.2.4",
    "vue": "^3.0.5",
    "vue-i18n": "^9.0.0",
    "vue-router": "^4.0.5"
  },
  "devDependencies": {
    "@baloise/ui-library-testing": "^4.6.4",
    "@types/jest": "^26.0.21",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "@vitejs/plugin-vue": "^1.1.5",
    "@vue/compiler-sfc": "^3.0.5",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "cypress": "^6.8.0",
    "eslint": "^7.22.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.8.0",
    "glob": "^7.1.6",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "start-server-and-test": "^1.12.1",
    "typescript": "^4.2.3",
    "vite": "^2.1.2",
    "vue-tsc": "0.0.14"
  }
}
