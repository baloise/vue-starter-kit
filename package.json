{
  "name": "vue-starter-kit",
  "version": "0.0.0",
  "scripts": {
    "postinstall": "baloiseStencilViteFix && npm run copy:fonts",
    "copy:fonts": "copyfiles --flat node_modules/@baloise/design-system-fonts/lib/* public/assets/fonts",
    "start": "npm run dev",
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --port 5050",
    "test": "npm run test:unit",
    "test:ui": "vitest --ui --coverage",
    "test:unit": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "start-server-and-test preview http://127.0.0.1:5050/ 'cypress open'",
    "test:e2e:ci": "start-server-and-test preview http://127.0.0.1:5050/ 'cypress run'",
    "lint": "eslint --ext .ts,.vue --ignore-path .gitignore --fix src",
    "lint:style": "stylelint src/**/*.{css,scss,sass,vue}",
    "lint:markup": "vue-tsc --noEmit",
    "format": "prettier .  --write",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@baloise/design-system-components-vue": "^10.10.9-beta.11",
    "@baloise/vue-axios": "^1.3.1",
    "@baloise/web-app-validators-vue": "^3.3.3",
    "axios": "^0.27.2",
    "pinia": "^2.0.13",
    "vee-validate": "^4.5.11",
    "vue": "^3.2.33",
    "vue-i18n": "^9.1.10",
    "vue-router": "^4.0.15"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@baloise/design-system-testing": "^10.10.9-beta.11",
    "@baloise/stencil-vite-fix": "^10.10.8",
    "@pinia/testing": "^0.0.11",
    "@rushstack/eslint-patch": "^1.1.3",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/builder-vite": "^0.1.33",
    "@storybook/vue3": "^6.4.22",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@vitejs/plugin-vue": "^2.3.2",
    "@vitest/ui": "^0.10.4",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-rc.21",
    "@vue/tsconfig": "^0.1.2",
    "babel-loader": "^8.2.5",
    "copyfiles": "^2.4.1",
    "cypress": "^9.6.0",
    "cypress-file-upload": "^5.0.8",
    "eslint": "^8.14.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "happy-dom": "^3.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "sass": "^1.51.0",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^14.8.2",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "typescript": "^4.4.4",
    "vite": "^2.9.8",
    "vite-plugin-eslint": "^1.6.0",
    "vitest": "^0.10.1",
    "vue-loader": "^16.8.3",
    "vue-tsc": "^0.34.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,vue}": "eslint --fix",
    "*.{css,scss,vue}": "stylelint --fix",
    "*": "prettier -w -u"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ]
}
