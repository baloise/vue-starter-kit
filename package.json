{
  "name": "vue-starter-kit",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "==================== INSTALLATION / SETUP ====================": "========",
    "prepare": "husky install",
    "postinstall": "npm run install:app && npm run install:docs",
    "install:app": "npm --prefix app install",
    "install:docs": "npm --prefix docs install",
    "precommit": "lint-staged --allow-empty",
    "==================== FORMATTER / LINTER ======================": "========",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint": "npm run lint:code && npm run lint:style && npm run lint:app",
    "lint:code": "eslint --ext .ts,.vue --ignore-path .gitignore --fix app/src docs/stories cypress",
    "lint:style": "stylelint app/src/**/*.{css,scss,sass,vue}",
    "lint:app": "npm --prefix app run lint",
    "spell": "cspell \"app/src/**/*.{md,ts,vue,sass,scss}\" \"docs/stores/**/*.{md,mdx,ts}\" \"cypress/**/*.{ts,md}\" --no-progress --gitignore",
    "==================== START ===================================": "========",
    "start": "npm run app",
    "app": "npm --prefix app run start",
    "app:preview": "npm --prefix app run preview",
    "docs": "npm --prefix docs run start",
    "==================== BUILD ===================================": "========",
    "build": "npm run build:app",
    "build:app": "npm --prefix app run build",
    "build:docs": "npm --prefix docs run build",
    "==================== TEST ====================================": "========",
    "test": "npm --prefix app run test",
    "test:watch": "npm --prefix app run test:watch",
    "test:coverage": "npm --prefix app run test:coverage",
    "cy:install": "cypress install",
    "cy:open": "npm run cy:open:app",
    "cy:open:app": "cypress open",
    "test:e2e": "concurrently --names \"üß™_TEST__,üñ•Ô∏è__SERVER\" -c \"green,magenta\" \"npm:cy:open\" \"npm:app\"",
    "test:e2e:ci": "start-server-and-test app:preview http://127.0.0.1:3000/ 'cypress run'"
  },
  "license": "MIT",
  "dependencies": {
    "pinia-logger": "^1.3.2",
    "types-ddd": "^2.12.0"
  },
  "devDependencies": {
    "@baloise/design-system-testing": "^10.10.9-beta.15",
    "@rushstack/eslint-patch": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "concurrently": "^7.1.0",
    "cspell": "^5.20.0",
    "cypress": "^9.6.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-terminal-report": "^3.5.2",
    "eslint": "^8.14.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "postcss-html": "^1.4.1",
    "prettier": "^2.6.2",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^14.8.2",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-recommended-scss": "^6.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "typescript": "^4.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
