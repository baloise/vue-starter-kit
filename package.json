{
  "name": "vue-starter-kit",
  "version": "0.0.0",
  "scripts": {
    "postinstall": "baloiseStencilViteFix && npm run copy:fonts",
    "copy:fonts": "copyfiles --flat node_modules/@baloise/design-system-fonts/lib/* public/assets/fonts",
    "start": "npm run dev",
    "dev": "vite --config vite.config.ts",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint --ext .ts,.vue --ignore-path .gitignore --fix src",
    "lint:style": "stylelint src/**/*.{css,scss,vue}",
    "lint:markup": "vue-tsc --noEmit",
    "format": "prettier .  --write",
    "cypress:run": "cypress run --config video=false,screenshotOnRunFailure=false",
    "cypress:run:ci": "cypress run --config",
    "cypress:open": "cypress open"
  },
  "dependencies": {
    "@baloise/design-system-components-vue": "^9.0.7-beta.33",
    "@baloise/vue-axios": "^1.3.1",
    "@baloise/web-app-validators-vue": "^2.0.15",
    "axios": "^0.25.0",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.10",
    "vee-validate": "^4.5.8",
    "vue": "^3.2.25",
    "vue-i18n": "^9.1.9",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@baloise/design-system-testing": "^9.0.7-beta.33",
    "@baloise/stencil-vite-fix": "^9.0.7-beta.27",
    "@pinia/testing": "^0.0.9",
    "@testing-library/vue": "^6.4.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "@vitejs/plugin-vue": "^2.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "copyfiles": "^2.4.1",
    "cypress": "^9.3.1",
    "eslint": "^8.7.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.4.0",
    "happy-dom": "^2.30.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1",
    "sass": "^1.49.0",
    "stylelint": "^14.3.0",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "typescript": "^4.4.4",
    "vite": "^2.7.2",
    "vite-plugin-eslint": "^1.3.0",
    "vite-svg-loader": "^3.1.2",
    "vitest": "^0.2.5",
    "vue-tsc": "^0.29.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,vue}": "eslint --fix",
    "*.{css,scss,vue}": "stylelint --fix",
    "*": "prettier -w -u"
  }
}
