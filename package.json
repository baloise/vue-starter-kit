{
  "name": "@baloise/vue-starter-kit",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "serve": "vue-cli-service serve --port 3000",
    "build": "vue-cli-service build --mode production",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e",
    "test": "start-server-and-test serve http-get://localhost:3000 cypress:run",
    "test:ci": "start-server-and-test serve http-get://localhost:3000 cypress:run:ci",
    "lint": "vue-cli-service lint",
    "format": "npm run prettier:write",
    "prettier:write": "prettier --write \"./src\"",
    "prettier:check": "prettier --check \"./src\"",
    "cypress:run": "cypress run --config video=false,screenshotOnRunFailure=false",
    "cypress:run:ci": "cypress run --config",
    "cypress:open": "cypress open",
    "copy:fonts": "copyfiles --flat node_modules/@baloise/design-system-fonts/lib/* public/assets/fonts",
    "postinstall": "npm run copy:fonts"
  },
  "dependencies": {
    "@baloise/design-system-components-vue": "^4.3.1",
    "@baloise/vue-axios": "^1.2.0",
    "axios": "^0.21.4",
    "core-js": "^3.6.5",
    "vee-validate": "^4.5.7",
    "vue": "^3.2.26",
    "vue-i18n": "^9.1.9",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@baloise/design-system-testing": "^4.3.1",
    "@types/jest": "^24.0.19",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-e2e-cypress": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^2.0.0-0",
    "copyfiles": "^2.4.1",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.0.0",
    "prettier": "^2.2.1",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "start-server-and-test": "^1.14.0",
    "typescript": "~4.1.5",
    "vue-jest": "^5.0.0-0"
  }
}
